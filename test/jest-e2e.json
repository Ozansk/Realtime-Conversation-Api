{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../src",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@helpers": "<rootDir>/helpers",
      "^@config/(.*)$": "<rootDir>/config/$1"
    },
    "testTimeout": 20000
}
